<% include partials/header %>

<div class="ui main test container">
<div class="ui huge header">Restful Blog App </div>
<div class="ui top attached segment">
  <div class="ui divided items">
    <% foundblog.forEach(function(blog){ %>
  <div class="item">
    <div class="image">
      <img src="<%= blog.image %>">
    </div>
    
    <div class="content">
      <a class="header" href="/blog/<%=blog._id %>"> <%= blog.title %></a>
      <div class="meta">
        <span> <%= blog.created.toDateString() %> </span>
        
      </div>
      <div class="description">
         <p><%- blog.Body.substring(0,100) %>....</p>
      </div>
       <div class="extra">
         <a class="ui floated brown large button" href="/blog/<%=blog._id %>">
           Read more<i class="angle double right icon"></i>
           </a>
      </div>
      </div>
    </div>
        <% });%>
         
  </div>
</div>
</div>      
<%  include partials/footer %>